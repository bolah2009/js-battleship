{
  "name": "js-battleship",
  "version": "1.0.0",
  "description": "A Battleship game using Test Driven Development",
  "main": "./dist",
  "devDependencies": {
    "@babel/preset-env": "^7.6.3",
    "codecov": "^3.7.1",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "1.18.2",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "webpack": "^4.40.0",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.1"
  },
  "scripts": {
    "test": "jest",
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "start": "webpack-dev-server --mode development --open",
    "format": "npx prettier  --write '**/*.{css,html,js,json,md.json,yaml,yml}'",
    "format:check": "npx prettier  --check '**/*.{css,html,js,json,md.json,yaml,yml}'",
    "lint": "npx eslint -c eslint.config '**/*.js' --fix && npx stylelint '**/*.css' --fix",
    "lint:check": "npx eslint -c eslint.config '**/*.js' && npx stylelint '**/*.css'",
    "codecov": "npx codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolah2009/js-battleship.git"
  },
  "author": "Bola Ahmed Buari",
  "license": "MIT",
  "keywords": [
    "JavaScript",
    "DOM",
    "Webpack",
    "ES6",
    "Test",
    "Jest"
  ],
  "bugs": {
    "url": "https://github.com/bolah2009/js-battleship/issues"
  },
  "homepage": "https://github.com/bolah2009/js-battleship#readme",
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "verbose": true
  }
}
